{{incremented @index}}) <span>{{firstName}} {{lastName}} {{people}} people <strong>{{date}} </strong>{{time}} {{phone}} {{email}}</s>

 <!--************ DELETE ************-->
  <form action="/admin/{{id}}/delete" method="POST">
    <button type="submit">delete booking</button>
  </form>

 <!--************ EDIT ************-->
  <form action="/admin/{{id}}/edit" method="POST">  

    
    
    <p>Datepciker: <input type="text" class="datepicker-admin" name="date" value="{{date}}"></p>  
   
    Time <input type="text" value="{{time}}" placeholder="{{time}}" name="time">

    People <input type="number" name="people" placeholder="people" value="{{people}}">

    First name: <input type="text" name="firstName" placeholder="First name" value="{{firstName}}">
    Last name: <input type="text" name="lastName" placeholder="Last name" value="{{lastName}}">
    Phone: <input type="tel" name="phone" placeholder="Phone" value="{{phone}}">
    Email: <input type="email" name="email" placeholder="Email" value="{{email}}">


    
    <button type="submit">edit booking</button>
  </form>
  <br>
  {{/each}}



