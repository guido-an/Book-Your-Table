 <!--************ FILTER per DATE************-->
<form action="/admin/filter-bookings" action="GET">

  <p>Date filter: <input type="text" class="datepicker-admin" name="date" required></p>

  Select time slot <select name="time">
    <option value="{{values.[1]._1Slot}}">{{values.[1]._1Slot}}</option>
    <option value="{{values.[1]._2Slot}}">{{values.[1]._2Slot}}</option>
  </select>

  <button type="submit">Filter</button>
</form><br><br>

<!-- Filtered Bookings per DATE new page --> 
<strong>{{date}} </strong>
<strong>{{time}}</strong>
{{#each filteredBookings}}

<p>{{firstName}} {{lastName}} {{people}} people {{phone}} {{email}}</p>

{{/each}}


<!-- Filtered Bookings per NAME new page --> 
Search by name or last name <form action="/admin/filter-bookings/name" action="GET">

  <input type="text" name="firstName" placeholder="Search..">
  <button type="submit">Filter</button>
</form><br><br>
{{#each filteredBookingsPerName}}

<p>{{firstName}} {{lastName}} {{people}} people {{phone}} {{email}}</p>

{{/each}}




 <!--************ ALL BOOKINGS ************-->
